 <% if logged_in? %>
<% provide(:title, "Languages") %>



<h1 align="center">Listing Languages</h1>
<br>
<div align='right'>
<%= form_tag search_languages_path,method: :post do |f| %>

<%= text_field_tag :search, params[:search],:placeholder => 'Language' %>
    <%= submit_tag "Search", :name => nil %>
    </div>
<br>
<% end %>

<table style="width:40%">
  <thead>
    <tr>
      <strong><th class="uu">Language</th></strong>
      
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @language.each do |language| %>
      <tr>
        <td height="50"><%= language.name %></td>
      
        <td height="50"><%= link_to 'Show', language_path(language) %></td>

        <td height="50"><%= link_to 'Edit', edit_language_path(language) %></td>

        <td height="50"><%= link_to 'Destroy', language_path(language), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>


<br>
  



<%= link_to "New Language", new_language_path, class: "btn btn-lg btn-success btn-sm " %>

