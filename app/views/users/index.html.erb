<% if logged_in? %>

<% if current_user.email=="vijay@rediffmail.com" %>
<h1 align="center">Listing Users</h1>



<table style="width:60%">
  <thead>
    <tr>
     <strong> <th class="uu">Name</th></strong>
      <strong><th class="uu">Email</th></strong>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.each do |user| %>
      <tr>
        <td height="75"><%= user.name %></td>
        <td height="75"><%= user.email %></td>
        <td height="75"><%= image_tag user.image.url :thumb %></td>

         <td height="75"><%= link_to 'Show', user_path(user) %></td>
        <td height="75"><%= link_to 'Edit', edit_user_path(user) %></td>
        <td height="75"><%= link_to 'Destroy', user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>

       
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
<div align="center"> <p class="mi"> <i class="yy">Please login as admin to view all users </i></p> </div>
<% end %>
<% else %>
</br>
 <div align="center"> <p class="mi"> <i class="yy">You are not logged in...Please login as admin to view all users </i></p> </div>
</br>
 <li class="mi">If you are a new user <%=link_to "Signup",signup_path %></li>
 </br>
 </br>
  <li class="mi">If you are an existing user <%=link_to "Login",login_path %></li>

<% end %>